{% extends 'base.html.twig' %}

{% block title %}Liste des ingrédients en stock{% endblock %}

{% block content %}
    <div class="row row-cols-auto align-items-center">
        <div class="col">
            <h1 class="display-6">Liste des ingrédients en stock</h1>
        </div>
{#        <div class="col">#}
{#            <a class="btn btn-sm btn-outline-primary" href="{{ path('app_stock_ingredient_new') }}" role="button">Nouveau tag</a>#}
{#        </div>#}
    </div>

    <div class="row mt-2 mb-3">
        <div class="col">
            {% if stockIngredients|length == 0 %}
                Aucun ingrédient trouvé
            {% elseif stockIngredients|length == 1 %}
                1 ingrédient trouvé
            {% else %}
                {{ stockIngredients|length }} ingrédients trouvés
            {% endif %}
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-hover align-middle table-bordered">
                <thead class="table-light">
                <tr>
                    <th scope="col">Catégorie</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Quantité</th>
                    <th scope="col">Date d'expiration</th>
                    <th scope="col">Statut</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for stockIngredient in stockIngredients %}
                    <tr>
                        <td>catégorie</td>
                        <td>{{ stockIngredient.ingredient.name }}</td>
                        <td>{{ stockIngredient.quantityNumber }}</td>
                        <td>{{ stockIngredient.expiresAt }}</td>
                        <td>{{ stockIngredient.stockStatus }}</td>
                        <td>
{#                            <a class="btn btn-sm btn-outline-secondary"#}
{#                               href="{{ path('app_ingredient_tag_edit', {'id': tag.id}) }}"#}
{#                            >#}
{#                                modifier#}
{#                            </a>#}
{#                            <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal"#}
{#                                    data-bs-target="#modalDeleteIngredientTag{{ tag.id }}"#}
{#                            >#}
{#                                supprimer#}
{#                            </button>#}

{#                            {{ include('ingredient_tag/_delete_form.html.twig', {'tag': tag}) }}#}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Aucun ingrédient trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
