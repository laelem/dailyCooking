{% extends 'base.html.twig' %}

{% block title %}Ingrédient{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            <h1 class="display-6">Ingrédient</h1>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Nom :</dt>
                <dd class="col-sm-10">{{ ingredient.name }}</dd>

                <dt class="col-sm-2">Conservation :</dt>
                <dd class="col-sm-10">{{ ingredient.whereToKeepLabel }}</dd>
            </dl>
        </div>
        <div class="card-footer">
            <a class="btn btn-primary"
               href="{{ path('app_ingredient_edit', {'id': ingredient.id}) }}"
               role="button"
            >Modifier</a>

            <a class="btn btn-secondary" href="{{ path('app_ingredient_index') }}" role="button">Retour</a>
        </div>
    </div>
{% endblock %}
