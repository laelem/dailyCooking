{{ form_start(form) }}
<div class="card">
    <div class="card-header">
        <h1 class="display-6">{{ title }}</h1>
    </div>
    <div class="card-body">
        {{ form_errors(form) }}

        {{ form_row(form.ingredient) }}
        {{ form_row(form.quantityNumber) }}
        {{ form_row(form.quantityType) }}

        <div class="row">
            <div class="col-3">
                {{ form_row(form.expiresAt) }}
            </div>
        </div>

        {{ form_row(form.stockStatus) }}
        {{ form_row(form.comment) }}
    </div>
    <div class="card-footer">
        {{ form_widget(form.save, {'label': submit_label}) }}
        <a class="btn btn-secondary" href="{{ path('app_stock_ingredient_index') }}" role="button">Retour</a>
    </div>
</div>
{{ form_end(form) }}
